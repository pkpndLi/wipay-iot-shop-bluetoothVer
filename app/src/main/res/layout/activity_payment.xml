<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="monofur_bold_for_powerline"
        android:text="Payment"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_SelectOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:backgroundTint="#777777"
        android:text="PAY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_QR" />

    <Button
        android:id="@+id/btn_SelectMag"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#777777"
        android:text="magneticstripe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_SelectEMV"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#777777"
        android:text="contactcard"
        app:layout_constraintEnd_toEndOf="@+id/btn_SelectMag"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/btn_SelectMag"
        app:layout_constraintTop_toBottomOf="@+id/btn_SelectMag" />

    <Button
        android:id="@+id/btn_QR"
        android:layout_width="358dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#777777"
        android:text="promptpay QR"
        app:layout_constraintEnd_toEndOf="@+id/btn_SelectEMV"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="@+id/btn_SelectEMV"
        app:layout_constraintTop_toBottomOf="@+id/btn_SelectEMV" />

    <TextView
        android:id="@+id/tv_InfoPayment"
        android:layout_width="353dp"
        android:layout_height="167dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/btn_QR"
        app:layout_constraintStart_toStartOf="@+id/btn_QR"
        app:layout_constraintTop_toBottomOf="@+id/btn_QR" />

</androidx.constraintlayout.widget.ConstraintLayout>